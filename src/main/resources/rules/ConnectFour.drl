		c4 : Celda (c4 != c1, c4 != c2, c4 != c3, $col1 == j, $col4 : j, $fil4 : i, valor == Celda.NADA)
		// Son consecutivas
	eval ($fil2 == $fil1+1 && $fil3 == $fil1+2 && $fil4 == $fil1+3 
